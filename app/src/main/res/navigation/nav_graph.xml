<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ibrahim.ratemovie.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/sevenFragment"
        android:name="com.ibrahim.ratemovie.fragment.SevenFragment"
        android:label="fragment_seven"
        tools:layout="@layout/fragment_seven" />
    <fragment
        android:id="@+id/eightFragment"
        android:name="com.ibrahim.ratemovie.fragment.EightFragment"
        android:label="fragment_eight"
        tools:layout="@layout/fragment_eight" />
    <fragment
        android:id="@+id/nineFragment"
        android:name="com.ibrahim.ratemovie.fragment.NineFragment"
        android:label="fragment_nine"
        tools:layout="@layout/fragment_nine" />
    <fragment
        android:id="@+id/tenFragment"
        android:name="com.ibrahim.ratemovie.fragment.TenFragment"
        android:label="fragment_ten"
        tools:layout="@layout/fragment_ten" />
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.ibrahim.ratemovie.fragment.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie"
            app:nullable="true"
            app:argType="com.ibrahim.ratemovie.model.Movie" />
    </fragment>
</navigation>